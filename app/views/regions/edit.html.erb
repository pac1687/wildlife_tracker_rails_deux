<h1>Edit Regions</h1>

<% if @region.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @region.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/regions/<%= @region.id %>" method = "post">
  <input name = "_method" type="hidden" value="patch">
  <label for="name">Name</label>
  <input id="name" name="name" type="text" value="<%= @region.name %>"
  >
  <button>Update Region Bitch</button>
</form>
