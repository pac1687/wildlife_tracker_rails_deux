<h1>Edit Sighting</h1>

<% if @sighting.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @sighting.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/species/<%= @specie.id %>/sightings/<%= @sighting.id %>" method = "post">
  <input name = "_method" type="hidden" value="patch">
  <label for="longitude">Longitude</label>
  <input id="longitude" name="longitude" type="text" value="<%= @sighting.longitude %>"
  >
  <label for="latitude">Latitude</label>
  <input id="latitude" name="latitude" type="text" value="<%= @sighting.latitude %>"
  >
  <select name="region_id">
    <% @regions.each do |region|%>
    <option value="<%= region.id %>"> <%= region.name %></option>
    <% end %>
  </select>
  <button>Update Sighting</button>
</form>
