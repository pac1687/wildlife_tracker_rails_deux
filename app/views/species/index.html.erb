<h1>Species Tracker</h1>

<h2>New Region</h2>

<% if @region.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @region.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/regions/<%= @region.id%>"  method="post">
  <label for="name">Name</label>
  <input id="name" name="name" type="text" value="<%= @region.name %>">

  <button>Add Region ‎( ͡° ͜ʖ ͡°)</button>
</form>

<h2>Regions</h2>
<ul>
  <% @regions.each do |region| %>
    <li><a href="/regions/<%= region.id %>"><%= region.name %></a></li>
  <% end %>
</ul>

<h2>New Species</h2>

<% if @specie.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @specie.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/species" method="post">
  <label for="specie_name">Name</label>
  <input id="specie_name" name="name" type="text">
  <button>Create a Species</button>
</form>

<h2>Species</h2>

<ul>
  <% @species.each do |specie| %>
    <li><a href="/species/<%= specie.id %>"><%= specie.name %></a></li>
  <% end %>
</ul>




